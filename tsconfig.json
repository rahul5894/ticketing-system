{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2023",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2023"
    ],
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    /* JavaScript Support */
    "allowJs": false,
    /* Type Checking */
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Emit */
    "noEmit": true,
    "incremental": true,
    "skipLibCheck": true,
    /* Interop Constraints */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "exactOptionalPropertyTypes": true,
    /* JSX */
    "jsx": "preserve",
    /* Next.js Plugin */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
